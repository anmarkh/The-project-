import java.util.LinkedList;

public class SearchHistoryManager {
    private LinkedList<String> searchHistory;

    // בנאי ברירת מחדל - ينشئ القائمة
    public SearchHistoryManager() {
        searchHistory = new LinkedList<>();
    }

    // פונקציה להוספת חיפוש חדש לרשימה (تضيف عملية بحث جديدة)
    public void addSearch(String search) {
        if (searchHistory.size() == 5) {
            searchHistory.removeFirst(); // حذف الأقدم إذا وصلنا لـ 5
        }
        searchHistory.add(search); // إضافة البحث الجديد
    }

    // פונקציה שמחזירה את רשימת החיפושים (تُرجع القائمة)
    public LinkedList<String> getSearchHistory() {
        return searchHistory;
    }
}
 import java.io.FileWriter;
import java.io.IOException;

public class FileSaver {

    private String fileName;

    // Constructor
    public FileSaver(String fileName) {
        this.fileName = fileName;
    }

    // Save text to file
    public void saveToFile(String text) {
        try {
            FileWriter writer = new FileWriter(fileName, true); // true عشان يضيف بدون ما يمسح القديم
            writer.write(text + "\n");
            writer.close();
        } catch (IOException e) {
            System.out.println("حدث خطأ أثناء الحفظ في الملف.");
        }
    }
}
